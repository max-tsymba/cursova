@model Mounight.Models.GalleryIndexModel

<div>
	<partial name="/Views/Shared/_HeroPartial.cshtml" />
	<div class="container">
		<h2 class="gallery__title">Our Gallery</h2>
		<div class="gallery">
			@foreach (var image in Model.Images)
			{
				<a asp-controller="Gallery" asp-action="Detail" asp-route-id="@image.Id">
					<div class="gallery__item" style="background-image: url(@image.Url)">
					</div>
				</a>
				
			}
		</div>
	</div>
</div>